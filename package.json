{
  "author": "Andrew Rahn <andy@modernlogic.io>",
  "bin": "./dist/cli/index.js",
  "dependencies": {
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "yargs": "^17.7.2"
  },
  "description": "FAST visual regression testing for React Native",
  "devDependencies": {
    "@react-navigation/native": "*",
    "@react-navigation/stack": "*",
    "@release-it/conventional-changelog": "^7.0.1",
    "@tsconfig/node16": "^16.1.1",
    "@types/node": "^20.6.1",
    "@types/pixelmatch": "^5.2.4",
    "@types/pngjs": "^6.0.1",
    "@types/react": "*",
    "@types/react-native": "*",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.23.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "import-sort-style-module": "^6.0.0",
    "prettier": "^3.0.3",
    "prettier-plugin-import-sort": "^0.0.7",
    "release-it": "*",
    "typescript": "^5.2.2",
    "unstated-next": "*"
  },
  "files": [
    "dist/",
    "!dist/**/*.test.*",
    "scripts/",
    "README.md"
  ],
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "license": "UNLICENSED",
  "main": "./dist/index.js",
  "name": "@modernlogic/snap",
  "packageManager": "npm@9.6.7",
  "peerDependencies": {
    "@react-navigation/native": "*",
    "@react-navigation/stack": "*",
    "react": "*",
    "react-native": "*",
    "unstated-next": "*"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "repository": "https://github.com/ModernLogic/snap",
  "scripts": {
    "build": "tsc && chmod +x ./dist/cli/index.js",
    "lint": "eslint",
    "prettier:apply": "prettier --write 'lib/**/*.{js,ts,tsx}'",
    "prettier:check": "prettier --check 'lib/**/*.{js,ts,tsx}'",
    "release": "release-it",
    "tar": "npm run build && mkdir -p package && cp -r dist package && cp package.json package && cp README.md package && tar -cf package.tar package && rm -rf package"
  },
  "types": "./dist/index.d.ts",
  "version": "0.0.14+1"
}
